<div id="artist"> <h1><%= @artist.name%></h1></div>
<div id="releases"><h2>Releases: </h2></div>
<div class="flex-container">
<div id="release_list">
   <% @releases.each do |release| %>
      <div>
         <%= link_to "%s %s" % [release.title, release.year], "/releases/%d" % release.id %>
         <div id="images_releases"><img src=<%=release.thumb%>></div>
      </div>
   <% end %>
</div>

<style>
   #artist{
        background-color: transparent;
        font-size:20px;
        float:center;
        color:white;
        margin-bottom:1em;
        text-decoration: underline;
        text-align:left;

   }

   #releases{
        background-color: transparent;
        font-size:16px;
        float:center;
        color:white;
        margin-bottom:30px;
        margin-top:50px;
        text-align:center;

   }
   
   #release_list{
        background-color: transparent;
        font-size:14px;
        color: white;
        margin-bottom:1em;
        text-align:center;
        float:center;
        font-weight:bold;
        line-height:50px;


    }
    
</style>