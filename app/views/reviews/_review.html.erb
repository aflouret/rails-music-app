<h3>Review:</h3>
<p>
    <strong>Username:</strong>
    <%= review.user.username %>
</p>

<p>
    <strong>Title:</strong>
    <%= review.title %>
</p>

<p>
    <strong>Review:</strong>
    <%= review.body %>
</p>

<p>
    <strong>Rating:</strong>
    <%= review.rating %>
</p>

<%if current_user.id == review.user_id%>
    <p>
        <%= link_to "Edit", edit_release_review_path(review.release, review) %>
    </p>
    <p>
        <%= link_to 'Delete', [review.release, review], method: :delete, data: { confirm: "Are you sure you want to delete your review?" } %>
    </p>
<% end %>



