<div id="title_search">Find your favourite <strong>artists</strong> and <strong>albums!</strong> </div>

<div id="search_table">
<%if params[:query_artist].nil? && params[:query_release].nil? %>

    <%= form_with url: "/search", method: 'get' do |form| %>
         

        <div class=search_artist><%= form.label :query_artist,"Search for an artist:"%></div>

        <%= form.text_field :query_artist, :placeholder => "Nirvana" %>

        <div><%= form.submit "Submit" %></div>
    <% end %>

    <%= form_with url: "/search", method: 'get' do |form| %>
        <div class=search_release><%= form.label :query_release, "Search for a release:" %></div>

        <%= form.text_field :query_release, :placeholder => "Nevermind" %>

         <div><%= form.submit "Submit" %></div>
    <% end %>

<% elsif params[:query_release].nil? && params[:query_artist] != nil %>
    <% @results_artists.each do |result| %>
        <div><%= link_to "%s" % [result.title], "/artists/%d" % result.id %></div>
    <% end %> 

<% elsif params[:query_artist].nil? && params[:query_release] != nil %>
    <% @results_releases.each do |result| %>
        <div>
            <%= link_to "%s" % [result.title], "/releases/%d" % result.id %>
            <div><img src=<%=result.thumb%>></div>
        </div>
    <% end %> 

<% end %>

</div>


<style>

    #title_search{
        background-color: transparent;
        font-size:40px;
        float:center;
        color: black;
        text-align:center;
        font-family: 'Helvetica Neue';
        margin-top: 80px;
        letter-spacing: -1px; 
        line-height: 1;
    }
    #search_table{
        font-size:15px;
        float:center;
        color: grey;
        text-align:left;

    }

    .search_artist{
        font-size:15px;
        height: 30px;
        color:black;
        font-weight:bold;
        border: 2px white;
        text-align:left;
        margin-top:60px;
        margin-left:50px;

    }

    .search_release{

        font-size:15px;
        height: 30px;
        color:black;
        font-weight:bold;
        border: 2px white;
        text-align:left;
        margin-top:40px;
        margin-left:50px;

    }

    input[type=text] {
        width:20%;
        padding:12px 20px;
        margin: 8px 0;
        box-sizing:border-box;
        border:2px solid black;
        border-radius:4px;
        background-color: white;
        color:black;
        background-image: "data:image/png;base64,";
        background-repeat:no-repeat;
        padding-left:40px;
    }
    
    input[type=button],input[type=submit],input[type=reset]{
        height:25px;
        background-color:black;
        border:none;
        color:#FFFF33;
        padding;16px 32px;
        text-decoration:none;
